@article{2003-MacFarlane-PB-326-213,
  title = "\ch{^{8}Li} β-{NMR} in thin metal films",
  journal = "Physica B",
  volume = "326",
  number = "1",
  pages = "213--216",
  year = "2003",
  issn = "0921-4526",
  doi = "10.1016/S0921-4526(02)01604-6",
  url = "http://www.sciencedirect.com/science/article/pii/S0921452602016046",
  author = "W. A. MacFarlane and G. D. Morris and T. R. Beals and K. H. Chow and R. A. Baartman and S. Daviel and S. R. Dunsiger and A. Hatakeyama and S. R. Kreitzman and C. D. P. Levy and R. I. Miller and K. M. Nichol and R. Poutissou and R. F. Kiefl",
  keywords = "β-NMR, Thin metallic films, Knight shift",
  abstract = "We have measured the temperature dependence of the β-NMR resonances of 8Li implanted in thin films of Au and Ag. At room temperature single narrow resonances are observed. The absence of appreciable quadrupolar splitting or broadening indicates that the Li is isolated and at a site of cubic symmetry. As the temperature is lowered, a second resonance appears which is shifted higher in frequency by ∼100ppm. We attribute the two lines to two distinct cubic sites with slightly different Knight shifts and discuss the application of this result to study fundamental phenomena exhibited by nano-confined metallic electrons."
}

