
@article{1978-Huberman-SSC-25-759,
   title = "Breakdown of absolute rate theory and prefactor anomalies in superionic conductors",
   journal = "Solid State Commun.",
   volume = "25",
   number = "10",
   pages = "759--762",
   year = "1978",
   issn = "0038-1098",
   doi = "10.1016/0038-1098(78)90233-8",
   url = "http://www.sciencedirect.com/science/article/pii/0038109878902338",
   author = "B. A. Huberman and J. B. Boyce",
   abstract = "We suggest that the anomalously low prefactors observed for the ionic hopping rate in defect-structure superionic conductors are due to a breakdown of absolute rate theory. A treatment that takes dissipative processes into account is introduced and a new expression for the prefactor is obtained. We present NMR data on the superionic conductor Li2Ti3O7 that supports these ideas and extract the value of the elemental energy transfer per collision."
}

