@article{1983-Villa-SSI-9-1421,
   title = "Prefactor anomalies",
   journal = "Solid State Ionics",
   volume = "9",
   number = "",
   pages = "1421--1426",
   year = "1983",
   issn = "0167-2738",
   doi = "10.1016/0167-2738(83)90188-1",
   url = "http://www.sciencedirect.com/science/article/pii/0167273883901881",
   author = "Marco Villa and John L. Bjorkstam",
   abstract = "The problem of modeling NMR correlation functions (cf) for ionic diffusion in solids is analyzed from a general point of view by summarizing the most useful mathematical properties of the cf's and by evaluating the merits of various approaches to the problem. While specific models of diffusion have been sometimes useful for interpreting data of well characterized samples there is, as yet, no generally accepted interpretation for quite similar relaxation behavior of the many different materials which have been studied. However, the NMR cf's,as well as the cf's appropriate for dielectric relaxation, photon correlation spectroscopy and mechanical relaxation experiments, are satisfactorily represented in terms of empirical fitting functions. For this reason, we discuss the physical meaning of the fitting parameter for the cf's which appear to have the Williams-Watts form, i.e., f(t) = exp(-(t/τ)β). This is done in terms of theories which take into account, from the outset, the disorderd nature of solids which support ionic conductivity."
}

@article{1985-Slade-SSC-54-1035,
   title = "Unresolved correlation time spectra and interpretation of {NMR} relaxation time data for superionic conductors",
   journal = "Solid State Commun.",
   volume = "54",
   number = "12",
   pages = "1035--1038",
   year = "1985",
   issn = "0038-1098",
   doi = "10.1016/0038-1098(85)90754-9",
   url = "http://www.sciencedirect.com/science/article/pii/0038109885907549",
   author = "Robert C. T. Slade",
   abstract = "Problems in relating the results of NMR relaxation time measurements to the results of bulk conductivity/diffusion studies for superionics have been discussed in a number of ways, such as their being a result of lack of knowledge of the appropriate motional correlation function. It is argued that, in the case of hydrated proton conductors at least, the problem is more fundamental. When previously unrecognized temperature-dependent correlation time spectra are present, these cannot be resolved in reduction of relaxation time data and information on any single contributory motion is not simply available."
}

@article{1985-Bjorkstam-JMR-65-383,
   title = "Motional narrowing of a {Gaussian} {NMR} line",
   journal = "J. Magn. Reson.",
   volume = "65",
   number = "3",
   pages = "383--394",
   year = "1985",
   issn = "0022-2364",
   doi = "10.1016/0022-2364(85)90125-8",
   url = "http://www.sciencedirect.com/science/article/pii/0022236485901258",
   author = "John L. Bjorkstam and John Listerud and Marco Villa and Carla Isella Massara",
   abstract = "Computer experiments have been performed to study the narrowing process of a Gaussian NMR line due to motions with temperature activated frequency components. A number of models are discussed which correspond to different choices of the correlation function describing the motion. In most cases, the data reduction procedures suggested in the literature do not yield appropriate values for the time scale and the activation energy of the motion. This inadequacy is the most likely cause of the so-called “prefactor anomalies” often observed in solid electrolytes. Simple rules are suggested for interpretation of NMR line-narrowing experiments in homogeneous systems where essentially all spins may be described by a single correlation function over the time scale accessed by the NMR experiment."
}

@article{1986-Bjorkstam-SSI-18-117,
   title = "{NMR} {$T_{1}$} and line narrowing in superionics --- A consistent interpretation",
   journal = "Solid State Ionics",
   volume = "18--19",
   pages = "117--121",
   year = "1986",
   issn = "0167-2738",
   doi = "10.1016/0167-2738(86)90097-4",
   url = "http://www.sciencedirect.com/science/article/pii/0167273886900974",
   author = "J. L. Bjorkstam and J. Listerud and M. Villa",
   abstract = "NMR studies in superionics seldom lead to results which may be well described by a simple exponential correlation function for the fluctuations leading to relaxation. Using the results of numerical calculations, attention is called to usefulness of the Williams-Watts function for extracting reliable information from NMR data when the exact correlation function is unknown."
}

