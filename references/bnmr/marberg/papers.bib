
@article{1971-Winnacker-ZP-244-289,
   author = "Winnacker, A. and Ackermann, H. and Dubbers, D. and Mertens, J. and von Blanckenhagen, P.",
   title = "Relaxation phenomena and nuclear magnetic resonance of \ch{^{116}In} ({$T_{1/2} = \SI{14}{\second}$}) produced by capture of polarized neutrons in the indium {III-V} compounds",
   journal = "Z. Phys.",
   year = "1971",
   month = "Aug",
   day = "01",
   volume = "244",
   number = "4",
   pages = "289--311",
   abstract = "Polarized116In nuclei have been produced by capture of polarized thermal neutrons in several In compounds. At temperaturesT below 77 {\textdegree}K and magnetic field strengthsH0 of several kOe, asymmetries of a few percent of the $\beta$− decay of the116In ground state could be observed in polycrystalline InP, InAs and InSb, thus indicating the nuclear polarization. Nuclear magnetic resonance signals have been measured with the result for the magnetic moment $\mu$i(116In)=2.7723 (10) nm (uncorrected). $\beta$− decay asymmetry and spin lattice relaxation timeT1 have been studied as a function ofH0 andT. The effect ofH0 is to decouple the hyperfine interaction caused by the capture-$\gamma$ recoil process. However,H0 has no influence uponT1, which demonstrates the absence of nuclear relaxation due to paramagnetic impurities.T1 is determined by quadrupolar relaxation. A quadrupole momentQ(116In)=0.09 (2) b was calculated by comparison of the116In relaxation rates with those of the stable115In isotope in the same compounds. Above 30 {\textdegree}K the temperature dependence of 1/T1 agrees with a recent theoretical investigation. Below 30 {\textdegree}K the relaxation rate shows an anomalous behaviour, which can be explained by resonance modes due to recoil lattice defects.",
   issn = "0939-7922",
   doi = "10.1007/BF01396789",
   url = "https://doi.org/10.1007/BF01396789"
}

@article{1973-Mertens-ZP-262-189,
   author = "Mertens, J. and Ackermann, H. and Dubbers, D. and Heitjans, P. and Winnacker, A. and von Blanckenhagen, P.",
   title = "Relaxation and deorientation of \ch{^{110}Ag} ({$T_{1/2} = \SI{24.4}{\second}$}) nuclei produced by capture of polarized neutrons in the silver halides",
   journal = "Z. Phys.",
   year = "1973",
   month = "Jun",
   day = "01",
   volume = "262",
   number = "3",
   pages = "189--210",
   abstract = "Polarized110Ag nuclei are produced in the silver halides by capture of polarized neutrons at temperatures below 30 K and magnetic field strengths up to 6 kOe. The depolarization process is studied by observation of the $\beta$ decay asymmetry as a function of magnetic field, temperature and of the radio frequency field strength in NMR signals. The depolarization is caused by a field dependent deorientation process and by temperature dependent spin-lattice relaxation. The deorientation is due to a succession of coupling steps of the nuclear spin with electromagnetic fields of defects generated as a consequence of the capture process, and the field dependence of the polarization can be understood as a decoupling curve. The temperature dependence of the spin-lattice relaxation is in accordance with the theory of quadrupolar relaxation above 18 K if an empirical phonon spectrum is used for the calculation. At lower temperatures the experimental relaxation rate is anomalously high, which may be due to resonance modes connected with recoil lattice defects.",
   issn = "0939-7922",
   doi = "10.1007/BF01391836",
   url = "https://doi.org/10.1007/BF01391836"
}

@article{1977-Dubbers-ZPA-282-243,
