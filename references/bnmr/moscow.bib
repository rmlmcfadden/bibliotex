}

@article{2008-Gulko-JSI-2-856,
    author = "Gul'ko, A. D. and Dzheparov, F. S. and Ermakov, O. N. and Lyubarev, A. A. and Stepanov, S. V. and Trostin, S. S.",
    title = "{β-NMR} and nuclear spin diffusion in a spatially disordered subsystem",
    journal = "J. Surf. Invest.",
    year = "2008",
    month = "Dec",
    day = "01",
    volume = "2",
    number = "6",
    pages = "856--860",
    abstract = "The results of theoretical and experimental investigations of delocalization of nuclear polarization in spatially disordered media are presented. The experiment is based on the measurement of a depolarization of $\beta$-active 8Li impurity nuclei ($\beta$-nuclei) in the spatially disordered subsystem of 8Li-6Li nuclei in LiF single crystals. The process is determined by the dipole-dipole interaction in this subsystem and by its dipole interactions with nuclei of the 7Li19F matrix. It is effective in a wide range of external magnetic fields H0 = 200--3000 G owing to proximity of g-factors. The kinetics of a depolarization of $\beta$-nuclei at the 6Li concentration c = 0.15--10.06{\%} in fields H0 = 200 and 1210 G is investigated. A satisfactory explanation of the results is based on the numerical-analytical simulation of the process.",
    issn = "1819-7094",
    doi = "10.1134/S1027451008060050",
    url = "https://doi.org/10.1134/S1027451008060050"
}

@article{2009-Dzheparov-AMR-35-411,
   author="Dzheparov, Fridrikh S. and Gulko, A. D. and Ermakov, O. N. and Lyubarev, A. A. and Stepanov, S. V. and Trostin, S. S.",
   title = "Kinetics of the polarization transfer in spatially disordered spin systems: Depolarization of impurity beta-active nuclei",
   journal = "Appl. Magn. Reson.",
   year = "2009",
   month = "Apr",
   day = "01",
   volume = "35",
   number = "3",
   pages = "411--420",
   abstract = "We performed theoretical and experimental studies of the delocalization of the nuclear polarization of impurity beta-active nuclei 8Li in the spatially disordered system of 6Li nuclei in LiF single crystals. The process is controlled by the dipole-dipole interaction of nuclear magnetic moments with other nuclei (7Li, 19F) in the crystal. It is effective in a wide range of magnetic fields H0 = 150--3000 G as a result of a unique proximity of the g-factors of 8Li and 6Li nuclei: (g(8Li) − g(6Li))/g(6Li) = 0.0057. The kinetics of the 8Li depolarization is measured for an 6Li concentration of 0.15{\%}--10.06{\%} and in the field H0 of 200, 692 and 1210 G. A satisfactory explanation of the results is obtained on the basis of a numerical-analytical simulation of the process.",
   issn = "1613-7507",
   doi = "10.1007/s00723-009-0172-6",
   url = "https://doi.org/10.1007/s00723-009-0172-6"
}

@article{2014-Abov-PAN-77-682,
   author = "Abov, Yu. G. and Gulko, A. D. and Dzheparov, F. S. and Ermakov, O. N. and Lvov, D. V. and Lyubarev, A. A.",
   title = "Investigation of the external-magnetic-field dependence of polarization transfer in a \ch{^{8}Li-^{6}Li} disordered nuclear system",
   journal = "Phys. At. Nucl.",
   year = "2014",
   month = "Jun",
   day = "01",
   volume = "77",
   number = "6",
   pages = "682--694",
   abstract = "Random walks in disorderedmedia are studied by considering the example of the delocalization of nuclear polarization in an ensemble of 8Li beta-active nuclei produced in (n, $\gamma$) reactions induced by polarized thermal neutrons in LiF single crystals. The process is initiated by magnetic dipole-dipole interactions. It consists in polarization transfer from a primarily polarized 8Li nucleus to the closest (stable) 6Li nuclei and in subsequent polarizationmigration over 6Li nuclei, the return of the polarization in question to the 8Li nucleus being possible. In order to obtain information about the polarization of 8Li nuclei, the asymmetry of beta radiation from them was measured with respect to the external magnetic field H0. The process was studied until it reached the diffusion asymptotic regime. The concentration of 6Li was varied between 3{\%} and 10{\%}, while the field strength H0 was changed from 200 to 1200 G. It is shown that microscopic theory is in satisfactory agreement with the experimental results obtained in the way outlined above. A comparison with the investigation of the mathematically allied process of the F{\"o}rster electricdipole transfer of localized excitons is performed.",
   issn = "1562-692X",
   doi = "10.1134/S1063778814050032",
   url = "https://doi.org/10.1134/S1063778814050032"
}

@Article{2014-Abov-AMR-45-1205,
