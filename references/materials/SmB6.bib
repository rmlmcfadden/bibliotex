@article{2018-Akintola-NPJQM-3-36,
   author = "Akintola, Kolawole and Pal, Anand and Dunsiger, Sarah R. and Fang, Alex C. Y. and Potma, Matt and Saha, Shanta R. and Wang, Xiangfeng and Paglione, Johnpierre and Sonier, Jeff E.",
   year = "2018",
   month = "08",
   day = "15",
   title = "Freezing out of a low-energy bulk spin exciton in \ch{SmB6}",
   journal = "npj Quantum Mater.",
   pages = "36",
   volume = "3",
   number = "1",
   abstract = "The Kondo insulator SmB6 is purported to develop into a robust topological insulator at low temperatures. Yet there are several puzzling and unexplained physical properties of the insulating bulk. It has been proposed that bulk spin excitons may be the source of these anomalies and may also adversely affect the topologically protected metallic surface states. Here, we report muon spin rotation measurements of SmB6 that show thermally activated behavior for the temperature dependence of the transverse-field relaxation rate below 20 K and a decreasing contact hyperfine field contribution to the positive muon Knight shift below 5–6 K. Our data are consistent with the freezing out of a bulk low-energy (~1 meV) spin exciton concurrent with the appearance of metallic surface conductivity. Furthermore, our results support the idea that spin excitons play some role in the anomalous low-temperature bulk properties of SmB6.",
   issn = "2397-4648",
   url = "https://doi.org/10.1038/s41535-018-0110-7",
   doi = "10.1038/s41535-018-0110-7"
}

