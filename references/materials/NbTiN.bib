	url = {https://www.sciencedirect.com/science/article/pii/S0257897209005404},
	author = {G. M. Matenoglou and L. E. Koutsokeras and Ch. E. Lekka and G. Abadias and C. Kosmidis and G. A. Evangelakis and P. Patsalas},
