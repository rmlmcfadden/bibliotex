@article{2018-Banerjee-OME-8-2072,
	author = {Archan Banerjee and Robert M. Heath and Dmitry Morozov and Dilini Hemakumara and Umberto Nasti and Iain Thayne and Robert H. Hadfield},
	journal = {Opt. Mater. Express},
	keywords = {Amorphous materials; Detector materials; Distributed Bragg reflectors; Microstructures; Optical materials; Thin films},
