@article{1969-Lomer-PMS-14-141,
	title = {The electronic structure of pure metals: Part {B}. {Fermi} surfaces and physical properties of some real metals},
	journal = {Prog. Mater. Sci.},
	volume = {14},
	number = {3},
	pages = {141--171},
	year = {1969},
	issn = {0079-6425},
	doi = {10.1016/0079-6425(69)90004-8},
	url = {https://www.sciencedirect.com/science/article/pii/0079642569900048},
	abstract = {Part A is the first of two articles which summarize the present theoretical position on the electronic structure of pure metals. This first one lists the energy terms which control the behaviour of the solid, and divides them into groups according to their thermodynamic importance, and shows how the principal electrostatic interactions control the electronic behaviour of solids. Attention is given to this inter-electronic interaction and the way in which metallic screening of this interaction helps justify the use of band theory, based on non-interacting particles in a rigid lattice. A more detailed section describes band theory, and the stability of magnetic structures, and appendices outline some of the more important methods of solving the electronic band problem. Finally, a short section describes briefly the kind of modifications introduced by treating the interactions of the electrons with one another, and with other excitations, as perturbations. No attention is paid to the difficult problem of determination of the most stable crystal structures for each element. Part B describes the Fermi surfaces and physical properties of some of the real metals for which they are now known, and shows quantitatively the shortcomings of elementary band theory. Estimates of electron-phonon interaction effects, electron-electron exchange effects and interband magnetic effects are given where possible.},
	author = {W. M. Lomer and W. E. Gardner},
}

