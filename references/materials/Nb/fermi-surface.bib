	% eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1002/pssb.2221620221},
	abstract = {Abstract Calculations of the extremal areas of Fermi surface orbits in the transition metal niobium (Nb) are presented using the ab initio linear muffin tin orbital method in the atomic sphere approximation and including the combined correction terms. Self-consistent calculations are performed using various exchange-correlation (XC) potentials. The Xα exchange-correlation potential (with α = 0.75) gives the best agreement with the experimental data. The anisotropy of the Fermi velocity of electrons at the Fermi surface and the mass enhancement factor are also calculated using this XC potential. These are compared with the experimental data and recent theoretical calculations.},
	year = {1990}
}

