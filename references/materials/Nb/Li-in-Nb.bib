	doi = "10.1007/978-1-4615-8996-9_27",
	url = "https://doi.org/10.1007/978-1-4615-8996-9_27"
}

@article{1978-Mertens-NIM-149-149,
	title = {Energy loss of light {\SI{300}{\kilo\electronvolt}} ions in thin metal foils},
	journal = {Nucl. Instrum. Methods},
	volume = {149},
	number = {1},
	pages = {149--153},
	year = {1978},
	issn = {0029-554X},
	doi = {10.1016/0029-554X(78)90852-2},
	url = {https://www.sciencedirect.com/science/article/pii/0029554X78908522},
	author = {P. Mertens},
	abstract = {The inelastic energy loss of light ions (Z1 = 1–10) has been measured for thin foils (Z2=6–79, d=500–800 Å), with a magnetic analyser. As a function of Z1 (nuclear charge of the ion) the cross section for electronic stopping Se exhibits a relative maximum at Z1 = 6 independent of the target material. As a function of Z2 (nuclear charge of the target) Se has maxima for the elements near the fourth group in the periodic table. As an application, the decrease in thickness of a bombarded foil is measured by the shift in energy loss of the sputtering ions.}
}

@article{1990-Fink-REDS-114-21,
	author = {D. Fink and K. Tjan and L. Wang},
	title = {On the thermal mobility of lithium in metals and semiconductors},
	journal = {Radiat. Eff. Defects Solids},
	volume = {114},
	number = {1--2},
	pages = {21--50},
	year  = {1990},
	publisher = {Taylor & Francis},
	doi = {10.1080/10420159008213080},
	URL = {https://doi.org/10.1080/10420159008213080},
	% eprint = {https://doi.org/10.1080/10420159008213080},
	abstract = {Only little information is hitherto available on the thermal mobility of lithium in metals and semiconductors. Therefore, we undertook a study on the thermal behavior of lithium, implanted into various solids, by means of the NDP technique. In the majority of cases, the Li mobility is strongly influenced by trapping at damage sites, which were either induced by the previous irradiation or preexisting in the target material. In those cases, a more or less complete transition from the regular range profile shape to the nuclear damage profile shape is observed. Finally, in several systems, regular thermal diffusion is found, which can be described well by Fick's law. Frequently, a fraction of the implanted Li is found to be much more mobile than the majority of the implanted material, which gives rise to surface precipitations at relatively low temperatures. The surface precipitations vanish when Li sublimation sets in.}
}

