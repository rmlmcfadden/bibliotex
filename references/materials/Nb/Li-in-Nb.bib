
@article{1974-Biersack-JNM-53-328,
	title = {Damage and range profiles of lithium implanted into niobium},
	journal = {J. Nucl. Mater.},
	volume = {53},
	pages = {328-331},
	year = {1974},
	issn = {0022-3115},
	doi = {10.1016/0022-3115(74)90265-7},
	url = {https://www.sciencedirect.com/science/article/pii/0022311574902657},
	author = {J. P. Biersack and D. Fink},
	abstract = {Depth distribution of Li-6 implanted into niobium, and the alteration of these profiles by diffusion are measured through the energy spectra of α-particles emitted after 6Li(n, α)T reactions, Moreover, at high-temperature implantation, radiation damage profiles are detected through Li atoms which are found to be trapped at point defects. By studying channeling or blocking effects in the angular distribution of emitted t and α particles, the lattice location of Li atoms in niobium can also be obtained. The results of the present experiments are: (i) Range distributions agree in shape with theoretical predictions up to the third moment of the distribution, but absolute values of mean range, width, and skewness are about 23\% smaller than predicted by current theories. (ii) Rapid diffusion of interstitial Li is observed during implantation at 683°C, while trapped Li atoms still remain immobile. (iii) Damage distributions (presumably vacancy concentrations) agree with theoretical predictions up to the third moment, except for the same scale factor as found in the range distribution.}
}

@incollection{1975-Biersack-ACS-2-737,
	author = "Biersack, J. P. and Fink, D.",
