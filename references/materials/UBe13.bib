@article{2000-Sonier-PB-289-20,
   title = "Anomalous {Knight} shift in the superconducting state of \ch{UBe13}",
   journal = "Physica B",
   volume = "289--290",
   pages = "20--23",
   year = "2000",
   issn = "0921-4526",
   doi = "10.1016/S0921-4526(00)00234-9",
   url = "http://www.sciencedirect.com/science/article/pii/S0921452600002349",
   author = "J. E. Sonier and R. H. Heffner and D. E. MacLaughlin and J. L. Smith and J. Cooley and G. J. Nieuwenhuys",
   keywords = "Heavy-fermion compounds, Superconductivity,  Knight shift",
   abstract = "We report muon spin rotation measurements of the temperature dependence of the μ+-Knight shift in single crystals of UBe13. The dipolar fields produced by the uranium 5f-electron moments result in two magnetically inequivalent μ+ sites. Below Tc, the magnitude of the Knight shift is observed to decrease with decreasing T at one of the sites, whereas it is found to increase at the other site. The data is explained by an effective exchange interaction between the μ+ and the 5f-electrons which is temperature dependent and anisotropic below T≈6 K."
}

