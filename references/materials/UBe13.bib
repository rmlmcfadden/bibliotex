@article{2003-Sonier-PB-326-414,
   title = "{μ}\textsuperscript{+}-{Knight} shift in the superconducting state of \ch{U_{1-x}Th_{x}Be13}, \ch{x} = 0 and 0.035 single crystals",
   journal = "Physica B",
   volume = "326",
   number = "1",
   pages = "414--417",
   year = "2003",
   issn = "0921-4526",
   doi = "10.1016/S0921-4526(02)01653-8",
   url = "http://www.sciencedirect.com/science/article/pii/S0921452602016538",
   author = "J. E. Sonier and R. H. Heffner and G. D. Morris and D. E. MacLaughlin and O. O. Bernal and J. Cooley and J. L. Smith and J. D. Thompson",
   keywords = "Heavy-fermion superconductors, μ-Knight shift",
   abstract = "We report μ+-Knight shift measurements as a function of temperature in U1−xThxBe13, x=0 and 0.035, single crystals. An anomalous change in the hyperfine coupling at low temperatures is observed which is similar to that reported in nuclear magnetic resonance studies of U- and Ce-based heavy fermion compounds. In the superconducting phase the static spin susceptibility, χspin, determined from the μ+-Knight shift decreases continuously with decreasing temperature in pure UBe13, but saturates below the second transition temperature in U0.965Th0.035Be13. We briefly discuss these behaviors in terms of a two-component spin-triplet order parameter and propose μSR experiments that can test our hypothesis."
}

@article{2007-Heffner-JMMM-310-e6,
   title = "Two-fluid model of heavy fermion formation and {μSR} {Knight} shift measurements in \ch{UBe13}",
   journal = "J. Magn. Magn. Mater.",
   volume = "310",
   number = "2, Part 1",
   pages = "e6--e8",
   year = "2007",
   %note = "Proceedings of the 17th International Conference on Magnetism",
   issn = "0304-8853",
   doi = "10.1016/j.jmmm.2006.10.054",
   url = "http://www.sciencedirect.com/science/article/pii/S0304885306012054",
   author = "R. H. Heffner and D. E. MacLaughlin and J. E. Sonier and M. F. Hundley and J. D. Thompson",
   keywords = "Heavy fermion, Muon spin relaxation, Knight shift",
   abstract = "We analyze μSR Knight shift data in UBe13 which show a non-linear K–χ relation or ‘Knight shift’ anomaly. These data are discussed in terms of a two-component susceptibility proposed by Nakatsuji et al., one component corresponding to non-interacting Kondo moments and a second, low-temperature component χHF∝(1-T/T*)ln(T*/T) associated with onset of the heavy fermion state below T*. The data are consistent with this two-fluid scaling law, with T*=8.9±0.4K, and are discussed in terms of the Sommerfeld coefficient and related changes in the low-temperature resistivity, specific heat and NMR relaxation rates in UBe13."
}

