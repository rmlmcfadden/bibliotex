@article{2012-Mandeltort-JPCC-116-24962,
   author = {Mandeltort, Lynn and Yates, John T.},
   title = {Rapid Atomic \ch{Li} Surface Diffusion and Intercalation on Graphite: A Surface Science Study},
   journal = {J. Phys. Chem. C},
   volume = {116},
   number = {47},
